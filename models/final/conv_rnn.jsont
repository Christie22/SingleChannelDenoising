{
    "_meta": {
        "descr": "RNN model: baseline (as close to the paper as possible)",
        "source": "Convolutional-Recurrent Neural Networks for Speech Enhancement",
        "author": "Han Zhao et al.",
        "url": "https://arxiv.org/abs/1805.00579"
    },
    "architecture": [{
            "layer_type": "conv2d",
            "layer_args": {
                "filters": {{n_filters}}, 
                "kernel_size": {{kernel_size}},
                "padding": "same",
                "strides": {{strides}},
                "bias_initializer": {{bias_initializer}}
            }
        },{
            "layer_type": "batchnorm",
            "layer_args": {}
        },{
            "layer_type": "activation",
            "layer_args": {
                "activation": {{conv_activ_func}}
            }
        },
        
        {
            "layer_type": "permute",
            "layer_args": {
                "dims": [2, 1, 3]
            }
        }, {
            "layer_type": "reshape",
            "layer_args": {
                "target_shape": [{{timesteps}}, -1]
            }
        }, 
        
        {
            "layer_type": "lstm",
            "layer_args": {
                "units": {{n_recurrent}},
                "return_sequences": true
            }
        },

        {
            "layer_type": "dense",
            "layer_args": {
                "units": {{n_dense}},
                "bias_initializer": "{{bias_initializer}}"
            }
        },{
            "layer_type": "activation",
            "layer_args": {
                "activation": "{{dense_activ_func}}"
            }
        },{
            "layer_type": "dropout",
            "layer_args": {
                "rate": {{dropout_rate}}
            }
        },
        
        {
            "layer_type": "reshape",
            "layer_args": {
                "target_shape": [{{timesteps}}, -1, {{channels}}]
            }
        }, {
            "layer_type": "permute",
            "layer_args": {
                "dims": [2, 1, 3]
            }
        }
    ]
}